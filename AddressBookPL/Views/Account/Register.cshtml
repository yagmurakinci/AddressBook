@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Şimdi Kayıt Olabilirsiniz</h3>

<div class="row">
    <div class="col-8 offset-2 offset-2">
        <form asp-controller="Account" asp-action="Register" method="post">
           <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group">
                 <label style="font-weight:bold;">İsminiz:</label>
                 <input  type="text" asp-for="Name" 
                 class="form-control" />
            </div> <br />
            <div class="form-group">
                 <label style="font-weight:bold;">Soyisminiz:</label>
                 <input  type="text" asp-for="Surname" 
                 class="form-control" />
            </div> <br />

            <div class="form-group">
                 <label style="font-weight:bold;">Kullanıcı Adınız:</label>
                 <input  type="text" asp-for="UserName" 
                 class="form-control" />
            </div> <br />

            <div class="form-group">
                 <label style="font-weight:bold;">Emailiniz:</label>
                 <input  type="email" asp-for="Email" 
                 class="form-control" />
            </div> <br />

            <div class="form-group">               
                 <label style="font-weight:bold;">Şifreniz:</label>
                 <span style="color:gray;">(KURALLAR)</span>
                 <input  type="password" asp-for="Password" 
                 class="form-control" />
            </div> <br />

               <div class="form-group">
                 <label style="font-weight:bold;">Şifre Tekrarınız:</label>
                 <input  type="password" asp-for="ConfirmPassword" 
                 class="form-control" />
            </div> <br />

               <div class="form-group">
                 <label style="font-weight:bold;"> Lütfen cep telefonunuzu giriniz:</label>
                 <input  type="text" asp-for="PhoneNumber" 
                 class="form-control" />
            </div> <br />
               
            <div class="form-group">
                <button type="submit" class="btn btn-danger">
                    Kayıt Ol</button>
                <a class="btn btn-primary" type="button" asp-controller="Account" asp-action="Login">GİRİŞ YAP</a>
            </div>

        </form>

    </div>
   

</div>


